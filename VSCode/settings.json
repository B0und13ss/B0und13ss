{
  "breadcrumbs.enabled": false,
  "chat.commandCenter.enabled": false,
  "code-runner.runInTerminal": true,
  "code-runner.clearPreviousOutput": true,
  "code-runner.preserveFocus": false,
  "code-runner.showExecutionMessage": false,
  "code-runner.enableAppInsights": false,
  "code-runner.executorMap": {
    "javascript": "node",
    "typescript": "ts-node",
    "python": "python3"
  },
  "C_Cpp_Runner.cStandard": "gnu23",
  "C_Cpp_Runner.cppStandard": "gnu++23",
  "C_Cpp_Runner.useAddressSanitizer": true,
  "C_Cpp_Runner.useUndefinedSanitizer": true,
  "C_Cpp_Runner.useLeakSanitizer": true,
  "C_Cpp_Runner.useLinkTimeOptimization": true,
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "debug.showInlineBreakpointCandidates": false,
  "errorLens.messageBackgroundMode": "message",
  "errorLens.enabledDiagnosticLevels": ["error", "info", "warning"],
  "editor.codeLens": false,
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingComments": "never",
  "editor.autoClosingQuotes": "never",
  "editor.cursorBlinking": "blink",
  "editor.cursorStyle": "line-thin",
  "editor.cursorSurroundingLines": 10,
  "editor.fontFamily": "JetBrainsMonoNL NFM SemiBold",
  "editor.fontLigatures": false,
  "editor.fontSize": 17,
  "editor.guides.indentation": false,
  "editor.lightbulb.enabled": "off",
  "editor.lineHeight": 1.45,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.colorDecorators": false,
  "editor.renderLineHighlight": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.showFoldingControls": "never",
  "editor.stickyScroll.enabled": false,
  "editor.suggest.insertMode": "replace",
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "files.dialog.defaultPath": "C:\\Users\\ian\\Code\\",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  "terminal.integrated.defaultLocation": "view",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.port": 8080,
  "vsicons.presets.hideExplorerArrows": true,
  "security.workspace.trust.untrustedFiles": "open",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.focusAfterRun": "terminal",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.tabStopWidth": 2,
  "terminal.integrated.tabs.enabled": false,
  "window.titleBarStyle": "custom",
  "vsicons.dontShowNewVersionMessage": true,
  "window.commandCenter": false,
  "window.customMenuBarAltFocus": false,
  "window.density.editorTabHeight": "compact",
  "window.enableMenuBarMnemonics": false,
  "window.menuBarVisibility": "hidden",
  "window.newWindowProfile": "Default",
  "window.restoreWindows": "none",
  "window.title": "${dirty}${activeEditorShort}",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.revealIfOpen": true,
  "workbench.colorTheme": "Vim Dark Hard",
  "workbench.panel.defaultLocation": "right",
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "none",
  "workbench.activityBar.location": "hidden",
  "workbench.iconTheme": "vscode-icons",
  "workbench.panel.opensMaximized": "preserve",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "terminal",
  "workbench.tips.enabled": false,
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.indent": 24,
  "workbench.tree.renderIndentGuides": "none",
  "keyboard.dispatch": "keyCode",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  // ! Prettier
  "prettier.printWidth": 180,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "prettier.bracketSpacing": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  // ! Custom Appearances
  "custom-ui-style.font.sansSerif": "Inter",
  "workbench.colorCustomizations": {
    "scrollbar.shadow": "#00000000",
    "[Vim Dark Hard]": {
      "titleBar.border": "#3c383600",
      "widget.border": "#3c3836",
      "panel.border": "#3c3836",
      "sideBar.border": "#3c3836",
      "statusBar.border": "#3c383600",
      "statusBar.noFolderBorder": "#3c383600",
      "statusBar.debuggingBackground": "#1d2021",
      "statusBar.debuggingForeground": "#ebdbb2",
      "statusBarItem.remoteBackground": "#1d2021",
      "editorGroupHeader.noTabsBackground": "#1d2021",
      "tab.activeBorder": "#3c383600",
      "editorGroupHeader.tabsBorder": "#3c383600",
    }
  },
  // ! VSCode Vim
  "vim.disableExtension": false,
  "vim.leader": "<Space>",
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.useCtrlKeys": true,
  "vim.smartRelativeLine": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgb(249, 226, 175)",
  "vim.highlightedyank.textColor": "rgb(30, 30, 46)",
  "vim.highlightedyank.duration": 100,
  "vim.normalModeKeyBindingsNonRecursive": [
    // ! no highlihgts
    {"before": ["<Escape>"], "commands": [":noh"]},
    // ! file modification
    {"before": ["leader", "w"], "commands": [":w!"]},
    {"before": ["leader", "q"], "commands": [":q"]},
    {"before": ["leader", "x"], "commands": [":x!"]},
    // ! tab navigations
    {"before": ["<S-h>"], "commands": [":tabp"]},
    {"before": ["<S-l>"], "commands": [":tabn"]},
    // ! fzf search
    {
      "before": ["leader", "/"],
      "commands": ["fuzzySearch.activeTextEditor"]
    },
    // ! side bar
    {
      "before": ["leader", "e"],
      "commands": ["workbench.action.focusSideBar"]
    },
    // ! comment lines
    {
      "before": ["leader", "c", "c"],
      "commands": ["editor.action.commentLine"]
    },
    // ! code actions
    {
      "before": ["leader", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    // ! d
    {
      "before": ["leader", "d", "b"],
      "commands": ["editor.debug.action.toggleBreakpoint"]
    },
    {
      "before": ["leader", "d", "u"],
      "commands": [""]
    },
    {
      "before": ["leader", "d", "w"],
      "commands": ["editor.debug.action.selectionToWatch"]
    },
    // ! f
    {
      "before": ["leader", "s", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {"before": ["leader", "f", "f"], "commands": ["editor.action.formatDocument"]},
    // ! g
    {
      "before": ["leader", "g", "s"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["leader", "g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["leader", "g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["leader", "g", "I"],
      "commands": ["editor.action.goToImplimentation"]
    },
    // ! p
    {"before": ["leader", "p", "v"], "commands": [":vnew"]},
    {"before": ["leader", "p", "h"], "commands": [":new"]},
    // ! r
    {
      "before": ["leader", "r", "s"],
      "commands": ["code-runner.stop"]
    },
    {
      "before": ["leader", "r", "r"],
      "commands": ["code-runner.run"]
    },
    {
      "before": ["leader", "r", "e"],
      "commands": ["emulator.start"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {"before": ["<"], "commands": ["editor.action.outdentLines"]},
    {"before": [">"], "commands": ["editor.action.indentLines"]},
    {"before": ["J"], "commands": ["editor.action.moveLinesDownAction"]},
    {"before": ["K"], "commands": ["editor.action.moveLinesUpAction"]},
    {
      "before": ["leader", "c", "c"],
      "commands": ["editor.action.commentLine"]
    }
  ]
}
